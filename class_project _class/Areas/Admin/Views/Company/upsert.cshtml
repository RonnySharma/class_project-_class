@model Project_model.Company
@{
    ViewData["Title"] = "upsert";
    var tatle = Model.Id != 0 ? "EditCompany" : "NewCompany";
}


<form method="post">
    <div class="row border">
        <div class="col-12">
            <h1 class="text-danger">@tatle</h1>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-8 border rounded">
                <div class="row" p-2 m-2>
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-8 border rounded">
                <div class="row" p-2 m-2>
                    <div class="col-4">
                        <label asp-for="streetaddress"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="streetaddress" class="form-control" />
                        <span asp-validation-for="streetaddress" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-8 border rounded">
                <div class="row" p-2 m-2>
                    <div class="col-4">
                        <label asp-for="city"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="city" class="form-control" />
                        <span asp-validation-for="city" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-8 border rounded">
                <div class="row" p-2 m-2>
                    <div class="col-4">
                        <label asp-for="state"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="state" class="form-control" />
                        <span asp-validation-for="state" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-8 border rounded">
                <div class="row" p-2 m-2>
                    <div class="col-4">
                        <label asp-for="phoneno"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="phoneno" class="form-control" />
                        <span asp-validation-for="phoneno" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-8 border rounded">
                <div class="row" p-2 m-2>
                    <div class="col-4">
                        <label asp-for="Postalcode"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Postalcode" class="form-control" />
                        <span asp-validation-for="Postalcode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-8 border rounded">
                <div class="row" p-2 m-2>
                    <div class="col-4">
                        <label asp-for="IsAuthorizedCompany"></label>
                    </div>
                    <div class="col-8">
                        <input type="checkbox" asp-for="IsAuthorizedCompany" />
                        <span asp-validation-for="IsAuthorizedCompany" class="text-danger"></span>
                    </div>

                    <div class="form-group row m-2 p-2">
                        <div class="col-4 offset-4">
                            @if (Model.Id != 0)
                            {
                                <partial name="Edit" />
                            }
                            else
                            {
                                <partial name="_Creat" />
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>